set my_pass_yahoo="`pass yahoo.com/habitzreuter | head -n 1`"

## Receive options.
set imap_user = habitzreuter
set imap_pass = $my_pass_yahoo
set folder = imaps://$imap_user@imap.mail.yahoo.com
set spoolfile = +INBOX
set postponed = +Drafts
set record = +Sent

## Send options.
set smtp_url = smtp://$imap_user@smtp.mail.yahoo.com
set smtp_pass = $my_pass_yahoo
set realname = 'Marco Antônio Habitzreuter'
set from = "habitzreuter@yahoo.com"
set hostname = "yahoo.com"
set signature = "Marco Antônio Habitzreuter"
# Connection options
set ssl_force_tls = yes
unset ssl_starttls

## Hook
account-hook $folder 'set imap_user=$imap_user@imap.mail.yahoo.com imap_pass=$my_pass_yahoo'
