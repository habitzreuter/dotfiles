[general]
# A folder where vdirsyncer can store some metadata about each pair.
status_path = "~/.vdirsyncer/status/"

[pair contacts]
a = "contacts_local"
b = "contacts_remote"

collections = ["from a", "from b"]
metadata = ["displayname"]

[storage contacts_local]
type = "filesystem"
path = "~/.contacts/"
fileext = ".vcf"

[storage contacts_remote]
type = "carddav"
url = "https://habitzreuter.science/radicale"
username = "habitzreuter"
password.fetch = ["command", "pass", "habitzreuter.science/radicale/habitzreuter"]

# CALDAV
[pair calendar]
a = "calendar_local"
b = "calendar_remote"
collections = ["from a", "from b"]

# Calendars also have a color property
metadata = ["displayname", "color"]

[storage calendar_local]
type = "filesystem"
path = "~/.calendars/"
fileext = ".ics"

[storage calendar_remote]
type = "caldav"
url = "https://habitzreuter.science/radicale"
username = "habitzreuter"
password.fetch = ["command", "pass", "habitzreuter.science/radicale/habitzreuter"]
